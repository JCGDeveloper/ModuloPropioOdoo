<odoo>
    <record id="view_camion_tree" model="ir.ui.view">
        <field name="name">paqueteria.camion.tree</field>
        <field name="model">paqueteria.camion</field>
        <field name="arch" type="xml">
            <tree string="Camiones">
                <field name="matricula"/>
                <field name="conductor_actual_id"/>
                <field name="fecha_itv"/>
            </tree>
        </field>
    </record>

    <record id="view_camion_form" model="ir.ui.view">
        <field name="name">paqueteria.camion.form</field>
        <field name="model">paqueteria.camion</field>
        <field name="arch" type="xml">
            <form string="Camión">
                <sheet>
                    <group>
                        <field name="matricula"/>
                        <field name="conductor_actual_id"/>
                        <field name="conductor_antiguos_ids"/>
                    </group>
                    <group>
                        <field name="fecha_itv"/>
                        <field name="notas_mantenimiento"/>
                    </group>
                    <group>
                        <field name="paquetes_ids">
                            <tree>
                                <field name="tracking_number"/>
                                <field name="destinatario_id"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_camiones" model="ir.actions.act_window">
        <field name="name">Camiones</field>
        <field name="res_model">paqueteria.camion</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Crea tu primer camión
            </p>
        </field>
    </record>

    <menuitem id="menu_camiones_root" name="Camiones" parent="base.menu_custom"/>
    <menuitem id="menu_camiones" name="Camiones" parent="menu_camiones_root" action="action_camiones"/>
</odoo>
