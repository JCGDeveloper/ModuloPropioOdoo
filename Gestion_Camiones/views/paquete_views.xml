<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista lista -->
    <record id="view_paquete_list" model="ir.ui.view">
        <field name="name">paquete.list</field>
        <field name="model">paqueteria.paquete</field>
        <field name="arch" type="xml">
            <list>
                <field name="tracking_number"/>
                <field name="remitente_id"/>
                <field name="destinatario_id"/>
                <field name="pais_id"/>
                <field name="region_id"/>
                <field name="municipio"/>
            </list>
        </field>
    </record>

    <!-- Vista formulario -->
    <record id="view_paquete_form" model="ir.ui.view">
        <field name="name">paquete.form</field>
        <field name="model">paqueteria.paquete</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="tracking_number"/>
                        <field name="remitente_id"/>
                        <field name="destinatario_id"/>
                        <field name="pais_id"/>
                        <field name="region_id"/>
                        <field name="municipio"/>
                        <field name="calle"/>
                        <field name="numero"/>
                        <field name="info_adicional"/>
                        <field name="camion_id"/>
                        <field name="last_update"/>
                    </group>
                    <notebook>
                        <page string="Seguimiento">
                            <field name="actualizaciones_ids">
                                <list editable="bottom">
                                    <field name="fecha"/>
                                    <field name="estado"/>
                                    <field name="notas"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
