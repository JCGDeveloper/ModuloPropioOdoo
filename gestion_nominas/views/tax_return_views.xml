<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_gestion_declaracion_tree" model="ir.ui.view">
            <field name="name">gestion.declaracion.renta.list</field>
            <field name="model">gestion.declaracion.renta</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="year"/>
                    <field name="payroll_count"/>
                    <field name="salary_total"/>
                    <field name="irpf_total"/>
                </list>
            </field>
        </record>

        <record id="view_gestion_declaracion_form" model="ir.ui.view">
            <field name="name">gestion.declaracion.renta.form</field>
            <field name="model">gestion.declaracion.renta</field>
            <field name="arch" type="xml">
                <form string="DeclaraciÃ³n de renta">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="employee_id"/>
                                <field name="year"/>
                            </group>
                            <group>
                                <field name="salary_total" readonly="1"/>
                                <field name="irpf_total" readonly="1"/>
                                <field name="payroll_count" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="payroll_ids" widget="many2many_tags"
                                   domain="[('employee_id', '=', employee_id),
                                            ('date', '&gt;=', year and ('%s-01-01' % year)),
                                            ('date', '&lt;=', year and ('%s-12-31' % year))]"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_gestion_declaracion_search" model="ir.ui.view">
            <field name="name">gestion.declaracion.renta.search</field>
            <field name="model">gestion.declaracion.renta</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="year"/>
                </search>
            </field>
        </record>

        <record id="action_gestion_declaracion_tree" model="ir.actions.act_window">
            <field name="name">Declaraciones</field>
            <field name="res_model">gestion.declaracion.renta</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
